<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>
<% if @task.completed %>
  <i class="far fa-check-circle"> </i>Task is completed
<% else %>
  <i class="far fa-circle"> </i>Task is not completed
<% end %>
</p>

<%= link_to "Edit", edit_task_path(@task) %> -
<%= link_to "Go back", tasks_path(@tasks) %>

