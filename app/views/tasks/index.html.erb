<h1>All tasks</h1>
<ul class="list-inline">
<% @tasks.each do |task| %>
  <li class="list-inline-item"><h3> <% if task.completed %> <i class="far fa-check-circle"></i> <% else %> <i class="far fa-circle"></i><% end %> <%= link_to task.title, task_path(task) %> </h3>
  <p><%= task.details %></p>
<%= link_to "edit", edit_task_path(task) %>
 <%= link_to "delete", task_path(task),
  method: :delete,
  data: { confirm: "Are you sure?" } %></li>

<% end %>
</ul>

<%= link_to "New", new_task_path, class: "btn btn-primary" %>
